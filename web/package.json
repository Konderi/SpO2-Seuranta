    "lucide-react": "^0.321.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.11.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "wrangler": "^3.25.0",
    "autoprefixer": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.0"
  }
